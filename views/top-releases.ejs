<section class="results-header">
  <p>Top Streaming Releases</p>
</section>

<!-- Filter and Sort Controls -->
<div class="filter-controls">
  <form method="GET" action="/top-releases" class="filter-form">
    <div class="filter-row">
      <div class="filter-group">
        <label for="sort">Sort by:</label>
        <select name="sort" id="sort" class="filter-select">
          <% sortOptions.forEach(option => { %>
            <option value="<%= option.value %>" <%= sortBy === option.value ? 'selected' : '' %>>
              <%= option.label %>
            </option>
          <% }) %>
        </select>
      </div>
      
      <div class="filter-group">
        <label for="genre">Genre:</label>
        <select name="genre" id="genre" class="filter-select">
          <option value="">All Genres</option>
          <% genres.forEach(genreOption => { %>
            <option value="<%= genreOption.id %>" <%= genre == genreOption.id ? 'selected' : '' %>>
              <%= genreOption.name %>
            </option>
          <% }) %>
        </select>
      </div>
      
      <button type="submit" class="filter-button">Apply Filters</button>
    </div>
  </form>
</div>

<% if ((movies || []).length > 0) { %>
  <div class="grid-container">
    <div class="results-grid">
      <% movies.forEach(movie => { %>
        <%- include('partials/_results-movie-card', { 
          movie, 
          showFollowButton: false 
        }) %>
      <% }); %>
    </div>
  </div>

  <%- include('partials/_pagination-releases', { 
    hasPrevPage, 
    hasNextPage, 
    currentPage,
    sortBy,
    genre
  }) %>

<% } else { %>
  <p style="text-align:center;">No top releases found for the selected criteria.</p>
<% } %>

<script src="/js/top-releases.js"></script>