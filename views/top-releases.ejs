<section class="results-header">
  <p>Top Streaming Releases</p>
</section>

<!-- Filter and Sort Controls -->
<div class="filter-controls">
  <form method="GET" action="/top-releases" class="filter-form">
    <div class="filter-row">
      <div class="filter-group">
        <label for="sort">Sort by:</label>
        <select name="sort" id="sort" class="filter-select">
          <% sortOptions.forEach(option => { %>
            <option value="<%= option.value %>" <%= sortBy === option.value ? 'selected' : '' %>>
              <%= option.label %>
            </option>
          <% }) %>
        </select>
      </div>
      
      <div class="filter-group">
        <label for="genre">Genre:</label>
        <select name="genre" id="genre" class="filter-select">
          <option value="">All Genres</option>
          <% genres.forEach(genreOption => { %>
            <option value="<%= genreOption.id %>" <%= genre == genreOption.id ? 'selected' : '' %>>
              <%= genreOption.name %>
            </option>
          <% }) %>
        </select>
      </div>
      
      <button type="submit" class="filter-button">Apply Filters</button>
    </div>
  </form>
</div>

<% if ((movies || []).length > 0) { %>
  <div class="grid-container">
    <div class="results-grid">

      <% movies.forEach(movie => { %>
        <div class="movie-card">
          <a href="/movie/<%= movie.id %>" class="movie-link">
          <img
            src="<%= movie.poster_path ? 'https://image.tmdb.org/t/p/w300' + movie.poster_path : '/images/funny-fallback.png' %>"
            alt="<%= movie.title %>"
            class="<%= movie.poster_path ? 'movie-poster' : 'movie-poster fallback' %>"
          />
          </a>
          <h3><%= movie.title %></h3>
          <p><%= movie.displayDate %></p>
          <% if (movie.rating && movie.rating > 0) { %>
            <div class="movie-rating">
              ⭐ <%= movie.rating.toFixed(1) %>/10
            </div>
          <% } %>
          
          <!-- No follow buttons for already released movies -->
        </div>
      <% }); %>

    </div>
  </div>

  <!-- Pagination -->
<% if (hasPrevPage || hasNextPage) { %>
  <div class="pagination">
    <% if (hasPrevPage) { %>
      <a href="/top-releases?page=<%= currentPage - 1 %><%= sortBy ? '&sort=' + sortBy : '' %><%= genre ? '&genre=' + genre : '' %>" class="pagination-btn">← Previous</a>
    <% } %>
    
    <span class="pagination-info">Page <%= currentPage %></span>
    
    <% if (hasNextPage) { %>
      <a href="/top-releases?page=<%= currentPage + 1 %><%= sortBy ? '&sort=' + sortBy : '' %><%= genre ? '&genre=' + genre : '' %>" class="pagination-btn">Next →</a>
    <% } %>
  </div>
<% } %>

<% } else { %>
  <p style="text-align:center;">No top releases found for the selected criteria.</p>
<% } %>

<script src="/js/top-releases.js"></script>
