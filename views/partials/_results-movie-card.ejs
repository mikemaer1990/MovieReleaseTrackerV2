<div class="movie-card">
  <!-- Movie Poster (always visible) -->
  <a href="/movie/<%= movie.id %>" class="movie-link">
    <img
      src="<%= movie.poster_path ? 'https://image.tmdb.org/t/p/w300' + movie.poster_path : '/images/funny-fallback.png' %>"
      alt="<%= movie.title %>"
      class="<%= movie.poster_path ? 'movie-poster' : 'movie-poster fallback' %>"
    />
  </a>

  <!-- Overlay (appears on hover) -->
  <div class="movie-overlay">
    <!-- Top section - Title, dates, rating -->
    <div class="overlay-top">
      <div class="overlay-title"><%= movie.title %></div>

      <div class="overlay-dates">
        <% if (movie.release_date) { %>
        <div class="date-item theatrical">
          ğŸ­ <%= new Date(movie.release_date + 'T00:00:00').toLocaleDateString('en-US', {
          year: 'numeric', month: 'short', day: 'numeric' }) %>
        </div>
        <% } %> <% if (movie.streamingDateRaw) { %>
        <div class="date-item streaming">
          ğŸ“º <%= new Date(movie.streamingDateRaw + 'T00:00:00').toLocaleDateString('en-US', {
          year: 'numeric', month: 'short', day: 'numeric' }) %>
        </div>
        <% } %> <% if (!movie.release_date && !movie.streamingDateRaw) { %>
        <div class="date-item no-date">Release date TBA</div>
        <% } %>
      </div>

      <% if (movie.rating && movie.rating > 0) { %>
      <div class="overlay-rating">â­ <%= movie.rating.toFixed(1) %>/10</div>
      <% } else { %>
      <div class="overlay-rating">Not yet rated</div>
      <% } %>
    </div>

    <!-- Bottom section - Follow button -->
    <% if (showFollowButton !== false) { %>
    <div class="overlay-actions">
      <%- include('_follow-button', { user, movie, followedMovieIds, query:
      query || '' }) %>
    </div>
    <% } %>
  </div>
</div>
